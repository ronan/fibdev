#!/bin/sh

id="${REMOTE_PROJECT}_${REMOTE_ENV:-"live"}_${SNAPSHOT_DATE:-$(date -I)}"

if [ -n $TERMINUS_SITE ]; then
    f=${1:-"/workspace/inbox/$id.sql"}
    remote cr
    remote sql:dump > $f
    ln -sf $f "/workspace/inbox/$REMOTE_ENV.sql"
else
 echo "Only terminus is supported currently"
 exit
fi