// See: https://www.drupal.org/docs/develop/development-tools/editors-and-ides/configuring-visual-studio-code
{
	"name": "DropDev",
	"dockerComposeFile": "docker-compose.yml",
	"service": "devcontainer",
	"workspaceFolder": "/workspace",
	// "postCreateCommand": ["reset"],
	"remoteUser": "root",
	"features": {
		"ghcr.io/devcontainers/features/git:1": {
			"ppa": true,
			"version": "os-provided"
		},
		"ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
			"moby": true,
			"installDockerBuildx": true,
			"version": "latest",
			"dockerDashComposeVersion": "v2"
		},
		"ghcr.io/devcontainers/features/node:1": {
			"version": "16",
			"nvmVersion": "latest"
		},
		"ghcr.io/devcontainers-contrib/features/gulp-cli:2": {
			"version": "latest"
		},
		"ghcr.io/devcontainers/features/python:1": {
			"installTools": true,
			"version": "os-provided"
		}
	},
	"customizations": {
		"vscode": {
			"settings": {
				"files.exclude": {
					// ".*": true, // Hide all hidden files for a focused view of just the source
					"**/.git": true,
					"**/.DS_Store": true,
					"**/Thumbs.db": true
				},
				"files.associations": {
					"*.inc": "php"
				},
				"cSpell.enabled": true,
				"editorconfig.generateAuto": false,
				"cSpell.words": [
					"devcontainer",
					"dropdev"
				]
			},
			"extensions": [
				"xdebug.php-debug",
				"bmewburn.vscode-intelephense-client",
				"streetsidesoftware.code-spell-checker",
				"EditorConfig.EditorConfig",
				"ms-azuretools.vscode-docker",
				"mrmlnc.vscode-apache",
				"DavidAnson.vscode-markdownlint",
				"emilast.LogFileHighlighter",
				"yzhang.markdown-all-in-one"
			]
		}
	}
}
